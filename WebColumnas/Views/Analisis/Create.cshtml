@model WebColumnas.Models.Lote

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Seleccionar Lote</h1>

<h4>Analisis</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateA" asp-route-id="@Model.LoteID" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoteID" class="control-label"></label>
                <select asp-for="LoteID" class="form-control" asp-items="ViewBag.Lotes")>
                    <option value="">Seleccione un lote</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Seleccionar" class="btn btn-primary" />
               
            </div>            
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
